{
  "version": 2,
  "buildCommand": "npm run build",
  "cleanUrls": true,
  "functions": {
    "api/process.ts": {
      "maxDuration": 30,
      "memory": 512
    },
    "api/chat.ts": {
      "maxDuration": 30,
      "memory": 512
    },
    "api/health.ts": {
      "maxDuration": 10,
      "memory": 256
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/public/demo.html"
    },
    {
      "source": "/demo",
      "destination": "/public/demo.html"
    },
    {
      "source": "/old",
      "destination": "/public/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
